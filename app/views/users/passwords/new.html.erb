<%= render(partial: 'users/shared/header') %>

<main>
  <h2>Forgot your password?</h2>

  <%= form_for(:user, as: :user, url: users_new_reset_password_path, html: { method: :post }) do |f| %>
    <p>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', required: true %>
    </p>

    <p>
      <%= f.submit 'Send me reset password instructions' %>
    </p>
  <% end %>

  <%= render(partial: 'users/shared/links/sign_in') %><br />
  <%= render(partial: 'users/shared/links/sign_up') %>
</main>
